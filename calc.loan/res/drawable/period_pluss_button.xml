<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="false" android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle" android:padding="10dp">
            <gradient
                    android:startColor="@color/buttonStart"
                    android:endColor="@color/buttonStop"
                    android:angle="270"/>
            <stroke
                    android:width="1dp"
                    android:color="@color/buttonBorder"/>
            <corners
                    android:bottomRightRadius="5dp"
                    android:bottomLeftRadius="0dp"
                    android:topLeftRadius="0dp"
                    android:topRightRadius="5dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle" android:padding="10dp">
            <gradient
                    android:startColor="@color/buttonFocusStart"
                    android:endColor="@color/buttonFocusStop"
                    android:angle="270"/>
            <stroke
                    android:width="1dp"
                    android:color="@color/buttonFocusBorder"/>
            <corners
                    android:bottomRightRadius="5dp"
                    android:bottomLeftRadius="0dp"
                    android:topLeftRadius="0dp"
                    android:topRightRadius="5dp"/>

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle" android:padding="10dp">
            <gradient
                    android:startColor="@color/buttonPressedStart"
                    android:endColor="@color/buttonPressedStop"
                    android:angle="270"/>
            <stroke
                    android:width="1dp"
                    android:color="@color/buttonPressedBorder"/>
            <corners
                    android:bottomRightRadius="5dp"
                    android:bottomLeftRadius="0dp"
                    android:topLeftRadius="0dp"
                    android:topRightRadius="5dp"/>
        </shape>
    </item>
</selector>