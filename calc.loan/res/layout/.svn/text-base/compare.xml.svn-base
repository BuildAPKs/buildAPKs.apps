<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical" android:padding="5px" android:background="@drawable/background">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            <HorizontalScrollView android:background="@layout/roundedshape" android:layout_width="fill_parent"
                                  android:layout_height="wrap_content" android:padding="5px"
                                  android:scrollbarSize="4px">
                <LinearLayout android:id="@+id/loansContainer" android:orientation="horizontal"
                              android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content">
                        <TextView android:text="@string/compareTypeLbl" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" android:textStyle="normal"
                                  android:textColor="@color/text" android:padding="5px" android:gravity="right"/>
                        <View android:layout_width="fill_parent" android:layout_height="1px"
                              android:background="@color/border"/>
                        <TextView android:text="@string/compareAmountLbl" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" android:textStyle="normal"
                                  android:textColor="@color/text" android:padding="5px" android:gravity="right"/>
                        <View android:layout_width="fill_parent" android:layout_height="1px"
                              android:background="@color/border"/>
                        <TextView android:text="@string/downPayment" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" android:textStyle="normal"
                                  android:textColor="@color/text" android:padding="5px" android:gravity="right"/>
                        <View android:layout_width="fill_parent" android:layout_height="1px"
                              android:background="@color/border"/>
                        <TextView android:text="@string/compareInterestLbl" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" android:textStyle="normal"
                                  android:textColor="@color/text" android:padding="5px" android:gravity="right"/>
                        <View android:layout_width="fill_parent" android:layout_height="1px"
                              android:background="@color/border"/>
                        <TextView android:text="@string/effectiveInterestCompareLbl" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" android:textStyle="normal"
                                  android:textColor="@color/text" android:padding="5px" android:gravity="right"/>
                        <View android:layout_width="fill_parent" android:layout_height="1px"
                              android:background="@color/border"/>
                        <TextView android:text="@string/comparePeriodLbl" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" android:textStyle="normal"
                                  android:textColor="@color/text" android:padding="5px" android:gravity="right"/>
                        <View android:layout_width="fill_parent" android:layout_height="1px"
                              android:background="@color/border"/>
                        <TextView android:text="@string/comparePaymentMaxLbl" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" android:textStyle="normal"
                                  android:textColor="@color/text" android:padding="5px" android:gravity="right"/>
                        <View android:layout_width="fill_parent" android:layout_height="1px"
                              android:background="@color/border"/>
                        <TextView android:text="@string/comparePaymentMinLbl" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" android:textStyle="normal"
                                  android:textColor="@color/text" android:padding="5px" android:gravity="right"/>
                        <View android:layout_width="fill_parent" android:layout_height="1px"
                              android:background="@color/border"/>
                        <TextView android:text="@string/compareInterestTotalLbl" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" android:textStyle="normal"
                                  android:textColor="@color/text" android:padding="5px" android:gravity="right"/>
                        <View android:layout_width="fill_parent" android:layout_height="1px"
                              android:background="@color/border"/>
                        <TextView android:text="@string/paymentCommission" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" android:textStyle="normal"
                                  android:textColor="@color/text" android:padding="5px" android:gravity="right"/>
                        <View android:layout_width="fill_parent" android:layout_height="1px"
                              android:background="@color/border"/>

                        <TextView android:text="@string/compareAmountTotalLbl" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" android:textStyle="normal"
                                  android:textColor="@color/text" android:padding="5px" android:gravity="right"/>
                        <View android:layout_width="fill_parent" android:layout_height="1px"
                              android:background="@color/border"/>
                        <TextView android:text=" " android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" android:textStyle="bold"
                                  android:textColor="@color/text" android:padding="5px" android:gravity="right"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
            <TableLayout android:layout_span="5" android:stretchColumns="*" android:layout_width="wrap_content"
                         android:layout_height="wrap_content">
                <TableRow>
                    <Button android:id="@+id/closeCompareButton" android:text="@string/close"
                            android:textStyle="bold" android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>
                    <Button android:text="@string/compareCleanLbl" android:id="@+id/cleanCompareButton"
                            android:layout_width="fill_parent" android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>